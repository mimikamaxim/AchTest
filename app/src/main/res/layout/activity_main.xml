<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Presentation.MainActivity">

    <TextView
        android:id="@+id/data_text_view"
        android:layout_width="147dp"
        android:layout_height="39dp"
        android:layout_marginTop="20dp"
        android:text="No Data"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.318"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <Button
        android:id="@+id/receive_btn"
        android:layout_width="290dp"
        android:layout_height="75dp"
        android:layout_marginTop="56dp"
        android:text="Get Data"
        app:layout_constraintTop_toBottomOf="@+id/data_text_view"
        tools:layout_editor_absoluteX="60dp" />

    <EditText
        android:id="@+id/data_edit_text"
        android:layout_width="311dp"
        android:layout_height="55dp"
        android:layout_marginTop="56dp"
        android:text="Put data here"
        app:layout_constraintTop_toBottomOf="@+id/receive_btn"
        tools:layout_editor_absoluteX="39dp" />

    <Button
        android:id="@+id/btn_put_data"
        android:layout_width="324dp"
        android:layout_height="59dp"
        android:layout_marginTop="36dp"
        android:text="Put data"
        app:layout_constraintTop_toBottomOf="@+id/data_edit_text"
        tools:layout_editor_absoluteX="36dp" />

</androidx.constraintlayout.widget.ConstraintLayout>